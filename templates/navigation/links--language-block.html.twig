{#
/**
 * @file
 * Theme override for a set of links used in the language switcher block.
 *
 * @see ./core/modules/stable/navigation/links.html.twig
 */
#}
{{ attach_library('oe_theme/dialogs') }}
{% if links -%}
  {% include '@oe_theme/compositions/ec-component-language-list/language-list-selector.html.twig' with {
    label: current_language.label,
    path: current_language.path,
    code: current_language.lang,
    icon_path: ecl_icon_path
  } only %}
  {% include '@ecl/language-list/language-list-overlay' with {
    items: languages,
    icon_path: ecl_icon_path,
    title: 'Select your language'|t,
    close_label: 'Close'|t
  } %}
{%- endif %}
